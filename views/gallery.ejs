<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gallery</title>
    <link rel="stylesheet" href="../public/test.css">
</head>
<body>
    <header>
        <div class="logo">Logo</div>
        <nav>
            <a href="/">Home</a>
            <a href="#">Adopt</a>
            <a href="login"><button class="sign-in">Sign In</button></a>
        </nav>
    </header>
    <div class="container">
        <div class="search-bar">
            <input type="text" placeholder="Search">
            <button class="search">Search</button>
            <button class="filter">Filter</button>
        </div>

        <div class="pet-grid">
            <% pets.forEach(pet => { %>
                <a href="<%= pet.link %>" class="pet-link">
                    <div class="pet-card">
                        <div class="image-container">
                            <img src="<%= pet.image %>" alt="<%= pet.name %>">
                        </div>
                        <div class="pet-info">
                            <h3><%= pet.name %></h3>
                            <hr>
                            <p><%= pet.age %></p>
                            <p><%= pet.gender %></p>
                        </div>
                    </div>
                </a>
            <% }); %>
        </div>

        <div class="more">There will be more below</div>
    </div>
</body>
</html>
