<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meet Our Pets!</title>
    <link rel="stylesheet" href="/gallery.css">
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
</head>
<body>
    <header>
        <div class="logo"><img src="/images/logo2.png" alt="logo"></div>
        <nav>
            <a href="/pets">Home</a>
            <a href="/pets/addPet">Add Pet</a>
            <a href="/pets/gallery">Meet Our Pets</a>
        </nav>
    </header>
    <div class="container">
        <h1>Find Your Companion Now!</h1>

            <form action="/pets/gallery" method="POST" class="search">
                <select id="breed" name="breed">
                    <option value="">Breed</option>
                    <% 
                        const uniqueBreeds = [...new Set(pets.map(pet => pet.breed))]; 
                        uniqueBreeds.forEach(breed => { 
                    %>
                    <option value="<%= breed %>"><%= breed %></option>
                    <% }); %>
                </select>
            
                
                <select id="location" name="location">
                    <option value="">Location</option>
                    <% 
                        const uniqueLocations = [...new Set(pets.map(pet => pet.location))]; 
                        uniqueLocations.forEach(location => { 
                    %>
                    <option value="<%= location %>"><%= location %></option>
                    <% }); %>
                </select>
            
                <select id="age" name="age">
                    <option value="">Age</option>
                    <option value="0-3">(0-3 Years)</option>
                    <option value="3-6">(3-6 Years)</option>
                    <option value="6-9">(6-9 Years)</option>
                    <option value="9-12">(9-12 Years)</option>
                    <option value="12+">(12+ Years)</option>
                </select>
            
                <button type="submit" class="filter">Apply Filters</button>

                <button type="submit" class="clear-filters" name="clearFilters" value="true">Clear Filters</button>
            </form>
        </div>

        <div class="pet-grid">
            <% pets.forEach(pet => { %>
                <a href="/pets/pet-profile/<%= pet._id %>" class="pet-link">
                    <div class="pet-card">
                        <div class="image-container">
                            <img src="<%= pet.imageUrl %>" alt="<%= pet.name %>">
                        </div>
                        <div class="pet-info">
                            <h3><%= pet.name %></h3>
                            <hr>
                            <p><%= pet.age %> years old</p>
                            <p><%= pet.gender %></p>
                        </div>
                    </div>
                </a>
            <% }); %>
        </div>
    </div>

    <footer>
        <form method="POST" action="/pets/">
            <button>Logout</button>
            <div class="footer-bottom">
                <p>&copy; 2024 Furever Friends. All rights reserved.</p>
            </div>
        </form>
    </footer>
</body>
</html>
