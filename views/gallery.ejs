<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gallery</title>
    <link rel="stylesheet" href="/test.css">
</head>
<body>
    <header>
        <div class="logo"><img src="/images/logo1.png" alt="logo"></div>
        <nav>
            <a href="/pets">Home</a>
            <a href="/pets/addPet">Add Pet</a>
            <a href="/pets/gallery">Gallery</a>
        </nav>
    </header>
    <div class="container">
            <form action="/pets/gallery" method="POST">
                <label for="breed">Breed</label>
                <select id="breed" name="breed">
                    <option value="">Select Breed</option>
                    <% 
                        const uniqueBreeds = [...new Set(pets.map(pet => pet.breed))]; 
                        uniqueBreeds.forEach(breed => { 
                    %>
                    <option value="<%= breed %>"><%= breed %></option>
                    <% }); %>
                </select>
            
                <label for="location">Location</label>
                <select id="location" name="location">
                    <option value="">Select Location</option>
                    <% 
                        const uniqueLocations = [...new Set(pets.map(pet => pet.location))]; 
                        uniqueLocations.forEach(location => { 
                    %>
                    <option value="<%= location %>"><%= location %></option>
                    <% }); %>
                </select>
            
                <label for="age">Age</label>
                <select id="age" name="age">
                    <option value="">Select Age</option>
                    <option value="0-3">(0-3 Years)</option>
                    <option value="3-6">(3-6 Years)</option>
                    <option value="6-9">(6-9 Years)</option>
                    <option value="9-12">(9-12 Years)</option>
                    <option value="12+">(12+ Years)</option>
                </select>
            
                <button type="submit" class="filter">Apply Filters</button>

                <button type="submit" class="clear-filters" name="clearFilters" value="true">Clear Filters</button>
            </form>
        </div>

        <div class="pet-grid">
            <% pets.forEach(pet => { %>
                <a href="/pets/pet-profile/<%= pet._id %>" class="pet-link">
                    <div class="pet-card">
                        <div class="image-container">
                            <img src="<%= pet.imageURL %>" alt="<%= pet.name %>">
                        </div>
                        <div class="pet-info">
                            <h3><%= pet.name %></h3>
                            <hr>
                            <p><%= pet.age %></p>
                            <p><%= pet.gender %></p>
                        </div>
                    </div>
                </a>
            <% }); %>
        </div>

        <div class="more">There will be more below</div>
    </div>

    
</body>
</html>
